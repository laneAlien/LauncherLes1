   
    <Page x:Class="LauncherLes1.View.MGAMESpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherLes1.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MGAMESpage">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top"
                Stretch="Fill" Source="res/TOPbackground/phoneup7.png"/>

        <Image Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                Stretch="Fill" Source="res/background/7phone.png"/>
        <Label HorizontalAlignment="Left" Margin="830,440,0,0" Grid.Row="2" VerticalAlignment="Top" Height="80" Width="163" Background="MidnightBlue"  >
            <Button x:Name="MemoryButton"  Content="MemmoryGame" Height="70" Width="159" Cursor="Hand" Click="MemoryButton_Click">
                <Button.Resources>
                    <ImageSource x:Key="Img">res/background/1phone.png</ImageSource>
                </Button.Resources>
            </Button>
        </Label>
        <Label Content="Label" HorizontalAlignment="Left" Margin="662,440,0,0" Grid.Row="1" VerticalAlignment="Top" Height="80" Width="163" Background="Maroon" />
        <Button x:Name="TicTacButton"  Content="Tic-Tac-Toe" Height="70" Width="153" HorizontalAlignment="Left" Margin="666,445,0,0" Grid.Row="1" VerticalAlignment="Top" Cursor="Hand" Click="TicTacButton_Click">
            <Button.Resources>
                <ImageSource x:Key="Img">res/background/1phone.png</ImageSource>
            </Button.Resources>
        </Button>
      



        </Grid>
    </Page>
    
    